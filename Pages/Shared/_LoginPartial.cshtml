@page
@model QT1_WEB.Pages.Shared._LoginPartialModel
@{
}
<div class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <span class="navbar-text text-dark">Hello, @User.Identity.Name!</span>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index")" method="post" class="form-inline">
            <button type="submit" class="btn btn-link text-dark">Log out</button>
        </form>
    }
    else
    {

        <ul>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
            </li>
        </ul>


    }
</div>
